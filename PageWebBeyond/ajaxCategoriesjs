

document.addEventListener('DOMContentLoaded', function () {
    // Récupérer les données depuis votre API Django
    fetch('http://127.0.0.1:8000/beyondShop/categories/3/')
        .then(response => {
            if (!response.ok) {
                throw new Error('Erreur de récupération des données');
            }
            return response.json();
        })
        .then(data => {
            // Traitement des données et affichage sur la page
            displayData(data);
        })
        .catch(error => {
            console.log('Erreur : ', error);
        });

    // Fonction pour afficher les données sur la page
    function displayData(data) {
        var container = document.getElementById('data-container');
        container.innerHTML = '';  // Effacer le contenu précédent, au cas où
    
        if (Array.isArray(data)) {
            // Si data est un tableau, affichez chaque élément
            data.forEach(item => {
                container.innerHTML += `<p>${item.name}</p>`;
                
            });
        } else {
            // Si data n'est pas un tableau, affichez directement les propriétés
            container.innerHTML += `<p>${data.name}</p>`;
            
        }
    }});
